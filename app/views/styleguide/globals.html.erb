    <p class="delta">Delta</p>
    <p class="epsilon">Epsilon</p>
    <p class="micro-size">Micro-size</p>
    <p class="nano-size">Nano-size</p>

    <div class="codeblock">

        <div class="codeblock__example">
            <%= example_code do %>
              <p class="alpha">Alpha</p>
              <p class="beta">Beta</p>
              <p class="gamma">Gamma</p>
              <p class="delta">Delta</p>
              <p class="epsilon">Epsilon</p>
