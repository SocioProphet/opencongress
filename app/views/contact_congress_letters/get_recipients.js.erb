<% if @sens.nil? && @reps.nil? %>
  $('#contact_recipients_container').html("<div class='none'>We could not find your representatives with the info you provided.  Please try again.");
<% else %>
  $('#contact_recipients_container').html("<%= escape_javascript(render :partial => 'contact_congress_letters/contact_recipients', :locals => { :show_checkboxes => true }) %>");
  <% unless @bill.nil? %>
    $('#contribution_data_container').html("<%= escape_javascript(render :partial => 'contact_congress_letters/message_builder_industry_contribution_data', :locals => { :trigger_js => true}) %>");
  <% end %>

  <% unless @bill.nil? or @bill.roll_calls.first.nil? %>
    $('#roll_call_container').html("<%= escape_javascript(render :partial => 'contact_congress_letters/message_builder_roll_call', :locals => { :roll_call => @bill.roll_calls.first }) %>");
  <% end %>
  $('.contact_recipients').css('background', 'rgba(101,101,101, .2)');

  <% if @zip4 %>
    $('#formageddon_formageddon_thread_sender_zip4').val('<%= @zip4 %>');
  <% end %>

  <% unless @reps.empty? %>
    $('.desk .the-user').html("A Constituent Out of <%= State.find_by_abbreviation(@reps.first.state).name.possessive %> <%= @reps.first.district.to_i.ordinalize %> District");
  <% end %>

  <% if @letter_start %>
    $('#formageddon_formageddon_thread_formageddon_letters_attributes_0_message').each(function(){
      var val = $(this).val();
      if(val.match(/<%= @letter_pat %>/)){
        $(this).val(val.replace(/<%= @letter_pat %>/g, '<%= @letter_start %>'))
      }else{
        $(this).val('<%= @letter_start %>' + val);
      }
    });
  <% end %>
<% end %>
