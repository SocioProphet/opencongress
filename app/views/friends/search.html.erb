<div style="border:1px solid #E3E7DF;padding:3px 5px;background:#f5f7fa;">

    <div style="padding:10px;background:#fff;">
        <h3 style="float:none">Search Results</h3>
        <% if @results.length == 0 %>
        Sorry, nothing found.
        <% else %>
        <ul id="friend_search_results">
            <% @results.each do |r| %>
            <li>
              <%= image_tag r.profile_image_path(:small_picture), :alt => r.login, :class => "img-polaroid" %>
              <div class="inline-block">
                <div>
                  <%= link_to h(r.login), user_profile_path(r.login) %>
                </div>
                <div style="position:relative;top:5px">
                  <span id="fdiv_<%=h r.id %>"><%= add_friend_link_ajax(r, :update => "fdiv_#{r.id}") %></span>
                </div>
              </div>
            </li>
            <% end %>
        </ul>
        <% end %>
    </div>

</div>