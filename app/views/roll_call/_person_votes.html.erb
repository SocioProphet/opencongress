<div id="person_votes_list">
  <table class="simple-table">
    <tr><th>Name</th><th>Voted</th></tr>
    <% votes.sort_by{ |v| [v.person.lastname, v.person.firstname] }.each do |vote| %>
      <tr>
        <td>
          <% if vote.person %>
              <a href="/people/show/<%= vote.person.to_param %>"><%= @titles_by_person[vote.person.id].titlecase %>. <%= vote.person.seated_name %></a>
          <% else %>
            No Data*
          <% end %>
        </td>
        <td class="<%= singular_vote_css_class(vote.vote) %>"><%= vote_name(vote.vote) %></td>
      </tr>
    <% end %>
  </table>
  <p>* - Voters marked "No Data" are voters that THOMAS has not associated yet.</p>
</div>
