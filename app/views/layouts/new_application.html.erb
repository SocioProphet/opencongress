<!DOCTYPE html>
<html>

    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <%= render :partial => 'shared/analytics_head' %>
        <%= csrf_meta_tag %>
        <%= remote_forgery_protection %>

        <%= javascript_include_tag "application" %>
        <!-- Include CDN javascript files and other initializations-->
        <%= render :partial => 'layouts/javascript' %>

        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <%= stylesheet_link_tag "application" %>

        <!-- need to add sunlight branding bar -->
        <%= render :partial => "meta/meta_tags_for_facebook" %>
        <%= render :partial => "meta/meta_tags_for_twitter" %>
        <%= render :partial => "meta/meta_tags_for_search" %>
        <title><%= @page_title %></title>
    </head>

    <body>

        <nav class="navbar navbar-default navbar-static-top">
        </nav>

        <main class="container">
            <%= yield %>
        </main>

        <footer class="footer">
            <div class="container">
                Footer
            </div>
        </footer>

        <div id="javascript-files">
          <%= content_for :javascript %>
        </div>
        <!-- add simplesocialite -->
    </body>

</html>