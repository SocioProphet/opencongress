<!doctype html>
<html lang="en" class="bb_wrapper">
  <head>
    <%= render :partial => 'shared/analytics_head' %>

    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta http-equiv="content-script-type" content="text/javascript" />
    <meta name="description" content="OpenCongress brings together official government data with news and blog coverage to give you the real story behind each bill." />

    <% if @meta_keywords %>
      <meta name="keywords" content="<%= @meta_keywords %>" />
    <% end %>

    <title>OpenCongress - <%= Settings.default_congress %>th Congress - Track bills, votes, senators, and representatives in the U.S. Congress</title>
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <%= bookmarking_image.html_safe %>
    <%= open_graph_meta %>

    <%= javascript_include_tag "application" %>
    <script src="//use.typekit.net/cuo6nsj.js"></script>
    <script>try{Typekit.load();}catch(e){}</script> 

    <%= csrf_meta_tag %>
    <%= remote_forgery_protection %>

    <%= stylesheet_link_tag "application" %>

    <!--[if lt IE 7]><style type="text/css">@import url("/stylesheets/ie6.css");</style><![endif]-->

    <!--[if IE 7]><style type="text/css">@import url("/stylesheets/ie7.css");</style><![endif]-->

    <!--[if lt IE 7]>
    <%= javascript_include_tag 'ie8/IE8' %>
    <![endif]-->

    <%= stylesheet_link_tag 'https://s3.amazonaws.com/sf-icons/css/sf-icons.css' %>

    <%= yield :stylesheets %>
  </head>

  <body>
    <%= render :partial => 'layouts/header' %>
    <%= render :partial => 'shared/user_login'  %>
    <%= render :partial => 'shared/notices' %>
    <%= render :partial => 'layouts/global_nav' %>
    <%= yield %>

    <div class="clear">&nbsp;</div>
    <%= render :partial => 'layouts/footer' %>
    <%= render :partial => 'shared/analytics_foot' %>
    <%# This must go ahead of socialite %>
    <%= fb_connect_async_js %>
    <%= javascript_include_tag "https://s3.amazonaws.com/sunlight-cdn/brandingbar/0.2/js/brandingbar.js" %>
    <%= javascript_include_tag "socialite/simple-socialite-pack.js" %>
    <script>
      Socialite.setup({
        facebook: {
            lang: 'en_US',
            appId: <%= ApiKeys.facebook_app_id %>
        },
        twitter: {
            lang: 'en'
        },
        googleplus: {
            lang: 'en-US'
        }
    });
    SimpleSocialite.ShareBar.registerButton({
      name: 'opencongress-email',
      displayName: 'Email'
    });
    </script>
      <%= info_box %>
      <div class="inner">

        <% if @user_object || @related_bills || @related_people || @related_issues ||
              @related_industries || @related_gossip || @custom_sidebar %>
          <div id="content-main">
        <% end %>

          <% if @topic %>
            <div id="topic">
              <%= topic_partial(@topic) %>
            </div>
          <% end %>

    <%= yield :javascripts %>
  </body>
</html>
