.bootstrap-enabled.email-congress.email-congress abbr[title], .bootstrap-enabled.email-congress abbr[data-original-title] {
    border-bottom: none;
    cursor: pointer;
}

.bootstrap-enabled.email-congress .user-message {
    padding: 30px 0;
    font-family: Helvetica, Arial, sans-serif;
    font-size: 20px;
    font-weight: normal;
    line-height: 26px;
}

.bootstrap-enabled.email-congress .username {
    display: inline-block;
    padding-bottom: 10px;
}

.bootstrap-enabled.email-congress .form-horizontal .control-group {
    margin-bottom: 10px;
}

.bootstrap-enabled.email-congress .form-horizontal .controls {
    margin-left: 145px;
}

.bootstrap-enabled.email-congress .form-horizontal .control-label {
    width: 120px;
}

.bootstrap-enabled.email-congress input,
.bootstrap-enabled.email-congress input[type="text"],
.bootstrap-enabled.email-congress input[type="tel"] {
    width: 275px;
    border: 1px solid #c4d9e4;
}

.bootstrap-enabled.email-congress .form-horizontal select {
    width: 290px;
}

.bootstrap-enabled.email-congress label.checkbox input[type="checkbox"] {
    width: 30px;
}
.bootstrap-enabled.email-congress .btn.btn-default {
    width: 290px;
    border: 1px solid #50a4ed;
    box-shadow: none;
    background: #50a4ed;
    color: #fff;
    text-shadow: none;
}

.bootstrap-enabled.email-congress .btn.btn-default:hover {
    background: #4b9ade;
}

.bootstrap-enabled.email-congress form.full-width-form input {
    width: 400px;
}

.bootstrap-enabled.email-congress form.full-width-form .btn.btn-default {
    width: 414px;
}

.bootstrap-enabled.email-congress .retention-explanation {
    margin: 50px 0 25px;
}

.bootstrap-enabled.email-congress .divider-top {
    border-top: 1px dashed #c4d9e4;
    padding-top: 20px;
}

.bootstrap-enabled.email-congress .errorExplanation {
    padding: 15px;
    margin-left: -20px;
    border: 1px solid #eed3d7;
    border-radius: 4px;
    background: #f2dede;
    color: #b94a48;
}

.bootstrap-enabled.email-congress .errorExplanation p {
    padding-bottom: 15px;
    color: #b94a48;
}

.bootstrap-enabled.email-congress .alert-info {
    margin: 35px 15px 15px;
    padding: 15px;
    border: 1px solid #bce8f1;
    border-radius: 4px;
    background: #d9edf7;
    margin-left: 0px;
}

.bootstrap-enabled.email-congress .alert-info p {
    margin-bottom: 20px;
}

.bootstrap-enabled.email-congress a.alt-link {
    text-align: center;
    font-size: 14px;
    display: block;
}

.bootstrap-enabled.email-congress .alert-info a.alt-link {
    margin-left: 0px;
}

.bootstrap-enabled.email-congress .email-message {
    margin-top: 20px;
    margin-bottom: 50px;
    padding: 20px;
    border-left: 5px solid #c4d9e4;
    background: #f9f9f9;
}

@media screen and (max-device-width: 480px) {
    .bootstrap-enabled.email-congress .form-horizontal .control-label {
        float: none;
        text-align: left;
    }
    .bootstrap-enabled.email-congress .form-horizontal .controls {
        margin-left: 0;
    }
}